{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "dev": { "cache": false },
    "db:generate": { "cache": false },
    "db:migrate": { "cache": false, "passThroughEnv": ["DATABASE_*"] },
    "zero:generate": { "cache": false },
    "@repo/backend#dev": {
      "passThroughEnv": ["DATABASE_*", "ZERO_*"]
    },
    "@repo/zero#dev": {
      "passThroughEnv": ["ZERO_*"]
    }
  }
}
